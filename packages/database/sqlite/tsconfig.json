{
  "extends": "tsconfig/lib.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "removeComments": true,
    "declaration": true,
    "outDir": "./dist"
  }
}
