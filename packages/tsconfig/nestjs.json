{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "preserveWatchOutput": true,
    "target": "es2017",
    "declarationMap": true,
    "inlineSourceMap": true,
    "incremental": true
  }
}
